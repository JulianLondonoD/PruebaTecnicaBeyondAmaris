# Production Environment Variables

# API Configuration
VITE_API_URL=https://api.todoapp.com
VITE_API_PROTOCOL=https
VITE_API_PORT=443
VITE_API_TIMEOUT=15000
VITE_API_RETRIES=3

# Frontend Configuration
VITE_APP_PORT=80
VITE_APP_HOST=0.0.0.0
VITE_AUTO_OPEN_BROWSER=false

# Build Configuration
VITE_OUTPUT_DIR=build
VITE_SOURCEMAP_ENABLED=false
VITE_BUNDLE_ANALYZER=true
VITE_STATS_FILENAME=./build/stats.html

# Cache Configuration (longer in production)
VITE_CACHE_STALE_TIME=30000
VITE_CACHE_GC_TIME=600000
VITE_CACHE_CATEGORIES_STALE_TIME=1200000
VITE_CACHE_CATEGORIES_GC_TIME=1800000

# Notification Configuration
VITE_NOTIFICATION_SUCCESS_DURATION=3000
VITE_NOTIFICATION_ERROR_DURATION=5000
VITE_NOTIFICATION_WARNING_DURATION=4000
VITE_NOTIFICATION_INFO_DURATION=3000

# Progress Configuration
VITE_PROGRESS_LOW_THRESHOLD=25
VITE_PROGRESS_MEDIUM_THRESHOLD=50
VITE_PROGRESS_HIGH_THRESHOLD=75
VITE_PROGRESS_ALMOST_COMPLETE_THRESHOLD=90

# Categories Configuration
VITE_DEFAULT_CATEGORIES=["Work","Personal","Study","Health","Finance","Shopping","Travel"]

# App Configuration
VITE_APP_TITLE=TodoApp
