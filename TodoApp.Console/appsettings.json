{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/todoapp-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "TodoApp": {
    "Database": {
      "ConnectionString": "Data Source=todoapp.db",
      "CommandTimeout": 30,
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false
    },
    "Business": {
      "MaxProgressionPercentage": 100,
      "AllowUpdateAfterPercentage": 50,
      "DefaultCategories": [ "Work", "Personal", "Study", "Health" ],
      "MaxDescriptionLength": 500,
      "MinDescriptionLength": 3
    },
    "Caching": {
      "DefaultExpirationMinutes": 60,
      "CategoriesCacheKey": "categories",
      "ConfigurationCacheKey": "configuration",
      "Enabled": true
    },
    "Logging": {
      "EnablePerformanceLogging": true,
      "PerformanceThresholdMs": 1000,
      "EnableStructuredLogging": true
    },
    "Application": {
      "Name": "TodoApp Enterprise",
      "Version": "2.0.0",
      "Environment": "Development"
    },
    "Resilience": {
      "Retry": {
        "MaxRetryAttempts": 3,
        "InitialDelaySeconds": 1,
        "UseExponentialBackoff": true
      },
      "CircuitBreaker": {
        "FailureRatio": 0.5,
        "MinimumThroughput": 10,
        "SamplingDurationSeconds": 30,
        "BreakDurationSeconds": 30
      },
      "Timeout": {
        "DefaultTimeoutSeconds": 30,
        "DatabaseTimeoutSeconds": 10,
        "CommandTimeoutSeconds": 30,
        "QueryTimeoutSeconds": 10
      }
    }
  }
}
