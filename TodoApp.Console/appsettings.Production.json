{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    }
  },
  "TodoApp": {
    "Database": {
      "ConnectionString": "Data Source=todoapp-prod.db",
      "EnableSensitiveDataLogging": false,
      "EnableDetailedErrors": false
    },
    "Logging": {
      "EnablePerformanceLogging": true,
      "PerformanceThresholdMs": 2000
    },
    "Application": {
      "Environment": "Production"
    }
  }
}
