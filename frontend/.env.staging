# Staging Environment Variables

# API Configuration
VITE_API_URL=https://staging.todoapp.com
VITE_API_PORT=443
VITE_API_TIMEOUT=12000
VITE_API_RETRIES=2

# Frontend Configuration
VITE_APP_PORT=3001
VITE_APP_HOST=localhost
VITE_AUTO_OPEN_BROWSER=false

# Build Configuration
VITE_OUTPUT_DIR=dist-staging
VITE_SOURCEMAP_ENABLED=true
VITE_BUNDLE_ANALYZER=true
VITE_STATS_FILENAME=./dist-staging/stats.html

# Cache Configuration
VITE_CACHE_STALE_TIME=15000
VITE_CACHE_GC_TIME=450000
VITE_CACHE_CATEGORIES_STALE_TIME=900000
VITE_CACHE_CATEGORIES_GC_TIME=1200000

# Notification Configuration
VITE_NOTIFICATION_SUCCESS_DURATION=3000
VITE_NOTIFICATION_ERROR_DURATION=5000
VITE_NOTIFICATION_WARNING_DURATION=4000
VITE_NOTIFICATION_INFO_DURATION=3000

# Progress Configuration
VITE_PROGRESS_LOW_THRESHOLD=25
VITE_PROGRESS_MEDIUM_THRESHOLD=50
VITE_PROGRESS_HIGH_THRESHOLD=75
VITE_PROGRESS_ALMOST_COMPLETE_THRESHOLD=90

# Categories Configuration
VITE_DEFAULT_CATEGORIES=["Work","Personal","Study","Health","Finance","Shopping","Travel"]

# App Configuration
VITE_APP_TITLE=TodoApp Staging
