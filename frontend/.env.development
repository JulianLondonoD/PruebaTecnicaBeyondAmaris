# Development Environment Variables

# API Configuration
VITE_API_URL=https://localhost:7025
VITE_API_PROTOCOL=https
VITE_API_PORT=7025
VITE_API_TIMEOUT=10000
VITE_API_RETRIES=2

# Frontend Configuration
VITE_APP_PORT=3000
VITE_APP_HOST=localhost
VITE_AUTO_OPEN_BROWSER=true

# Build Configuration
VITE_OUTPUT_DIR=dist
VITE_SOURCEMAP_ENABLED=true
VITE_BUNDLE_ANALYZER=false
VITE_STATS_FILENAME=./dist/stats.html

# Cache Configuration
VITE_CACHE_STALE_TIME=5000
VITE_CACHE_GC_TIME=300000
VITE_CACHE_CATEGORIES_STALE_TIME=600000
VITE_CACHE_CATEGORIES_GC_TIME=900000

# Notification Configuration
VITE_NOTIFICATION_SUCCESS_DURATION=3000
VITE_NOTIFICATION_ERROR_DURATION=5000
VITE_NOTIFICATION_WARNING_DURATION=4000
VITE_NOTIFICATION_INFO_DURATION=3000

# Progress Configuration
VITE_PROGRESS_LOW_THRESHOLD=25
VITE_PROGRESS_MEDIUM_THRESHOLD=50
VITE_PROGRESS_HIGH_THRESHOLD=75
VITE_PROGRESS_ALMOST_COMPLETE_THRESHOLD=90

# Categories Configuration
VITE_DEFAULT_CATEGORIES=["Work","Personal","Study","Health","Finance","Shopping","Travel"]

# App Configuration
VITE_APP_TITLE=TodoApp Development
